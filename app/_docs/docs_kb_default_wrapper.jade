extends ../_layout/_layout_template

include ../_layout/_layout_mixins
include ../_docs/_docs_mixins

block title
  title Knockback.js Docs

block includes
  link(rel='stylesheet', href='stylesheets/docs.css')

block navbar
  mixin pageNavbar('Docs', true)

block api_descriptions

  //////////////////////////////////
  // kb.DefaultWrapper
  //////////////////////////////////
  h2 kb.DefaultWrapper
  div Used to provide a default value if an observable's value is null or undefined
  h4 Example:
  pre(data-for='cs').
    wrapped_name = kb.defaultWrapper(kb.observable(model, 'name'), "(no name)')

  pre(data-for='js').
    var wrapped_name = kb.defaultWrapper(kb.observable(model, 'name'), "(no name)');

  h3#factory kb.defaultWrapper(target_observable, default_value_observable) <span class='label label-info'>factory</span>
  div Used to create a new instance
  h4 Parameters
    ol
      li <strong>target_observable</strong>
        span.type { any observable }:
      li <strong>default_value_observable</strong>
        span.type { an observable or constant }:
  h4 Example:
  pre(data-for='cs').
    wrapped_name = kb.formattedObservable(kb.observable(model, 'name'), "(no name)')

  pre(data-for='js').
    var wrapped_name = kb.formattedObservable(kb.observable(model, 'name'), "(no name)');

  h3#constructor constructor(target_observable, default_value_observable) <span class='label label-warning'>observable returned</span>
  div Used to create a new instance
  h4 Parameters
    ol
      li
        strong target_observable
        span.type { any observable }:
      li
        strong default_value_observable
        span.type { an observable or constant }:
  h4 Example:
  pre(data-for='cs').
    wrapped_name = new kb.FormattedObservable(kb.observable(model, 'name'), "(no name)')

  pre(data-for='js').
    var wrapped_name = new kb.FormattedObservable(kb.observable(model, 'name'), "(no name)');

  h3#destroy destroy()
  div Used to release the memory of the object

block content
  div.api.container
    h1 Knockback.js API and Usage Examples
    div.container-fluid
      div.row-fluid
        div.span3.api.index
          mixin docsIndex('kb.DefaultWrapper', [{factory: 'kb.defaultWrapper'}, {constructor: 'constructor'}, {destroy: 'destroy'}])
        div.span9.api.descriptions
          div.content
            div.wrapper
              block api_descriptions
