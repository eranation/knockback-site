
@import url('http://fonts.googleapis.com/css?family=Numans');
@import url('http://fonts.googleapis.com/css?family=Ubuntu+Mono:400,700,400italic,700italic');
@import 'nib'

div.api.container
  position fixed
  top 50px
  bottom 20px

  h1
    font-size 1.5em
    margin-left 20px

  div.api.index
    box-shadow 1px 1px 1px 1px black
    border-radius 2px
    background-color #ccc
    height 570px
    padding 0
    margin 0

    .content
      overflow-x hidden
      overflow-y auto
      height 100%

      ul
        margin 0

      li
        list-style-type none
        padding 0px 0px
        a:link, a:visited
          color black

        a:hover, a:active
          color blue

      li.type
        text-decoration underline
        font-weight bold
        padding 10px 0px 0px 0px

  div.api.descriptions
    height 570px

    .content
      overflow-x hidden
      overflow-y auto
      height 100%

      h2
        font-size 1.2em
        border-top 2px solid gray
        margin-top 10px

        div
          font-weight normal
          font-size 0.8em

      h3
        font-size 1.1em
        border-top 1px groove gray

        div
          font-weight normal
          font-size 0.8em

      h4
        font-size 1.1em
        border-top 1px dashed #B0C4DE

      span.type
        font-style italic
        font-size 12px
        color: #999

      h1, h2, h3, h4
        li
          span
            font-weight: normal
