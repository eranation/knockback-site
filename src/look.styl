
@import url('http://fonts.googleapis.com/css?family=Numans');
@import url('http://fonts.googleapis.com/css?family=Ubuntu+Mono:400,700,400italic,700italic');
@import 'lib/animate-custom.css';
@import 'nib';


Chosen = "Numans"
Monospaced = "Ubuntu Mono"

links = #2BA8D9

// Base
// ====

body
	background #eee
	margin 0px
	padding 0px
	font-family Helvetica, Arial, sans-serif
	min-width 520px

.animated
	animation-fill-mode both

a:link
a:visited
	color links
	text-decoration none
	transition color 200ms

a:link
	color links

a:visited
	color desaturate(links, 20)

a:hover
	color lighten(links, 10)
a:active
	color darken(links, 10)

a:visited:hover
	color lighten(desaturate(links, 30), 10)
a:visited:active
	color darken(desaturate(links, 30), 10)

a:focus
	text-decoration underline

tt, code, kbd, samp
	font-family Monospaced, monospaced

// Styles
// ======

#wrap
	position relative
	max-width 960px
	margin 0 auto

// Header
// ------

header
	position relative
	z-index 100
	font-size 70px
	padding 20px 0 20px
	font-family Chosen, 'Helvetica Neue', Helvetica, Arial, sans-serif
	.lock
		line-height 1em

	.logo
		float left
		font-size 100%
		margin 5px 21px
		.part
			display block
			img
				height 27px
				display block
		.left
		.right
			animation-delay 1.3s
	
	h1
		margin 0px
		padding 0px
		float left
		font-size 100%
		font-weight normal

	.knock
		animation-delay 0.1s
	.magic
		animation-delay 0.4s
	.back
		animation-delay 1.0s
	
	h2
		clear both
		font-size 20px
		margin 1ex 0
		font-weight normal
		color #555
		margin-left 90px

// Navigation (and sliders)
// ------------------------

nav#navigation
	position fixed
	z-index 200
	bottom 0px
	right 0px
	padding 10px
	background #eee
	border-radius top left 2px
	.separator
		margin 0px
		padding 0px
		margin-left 1ex
		float left
		.label
			margin 0 1ex

.selection
	border 1px solid #ccc
	border-radius 4px
	display inline-block
	vertical-align middle
	border-width 1px
	border-style solid
	border-color #333 #666 #fff
	background linear-gradient(top, #777, #999)
	.option
		display inline-block
		vertical-align middle
		input[type="radio"]
			display none
			& + label
				display inline-block
				background none transparent
				margin -1px -1px 0
				padding 0.5ex 1ex
				vertical-align middle
				border-radius 3px
				cursor pointer

			&:checked + label
				background linear-gradient(top,#666,#333)
				color white
				text-shadow 0px 1px 0px rgba(white,0), 0px -1px 0px black
				box-shadow inset 0px 0px 0px 1px rgba(black,0.4)
				cursor default

// Content
// -------

section#content
	position relative
	z-index 100
	animation-delay 2s
	line-height 1.2em
	-webkit-font-smoothing antialiased

	.content
		padding 0 10px

	.cols.wrapped
		border 1px solid gray
		padding 0 10px
		margin 10px
		border-radius 3px

	.cols
		overflow hidden
		.col
			width 33.33%
			float left
	
	p, pre
		margin @line-height 0px

	pre.hl
		position relative
		code
			position relative
			padding @line-height 2em
			overflow auto
			z-index 100

		// TODO match with style
		_bg = #444

		&:before
		&:after
			z-index 200
			content ''
			position absolute
			top 0px
			height 100%
			width 2em

		&:before
			left 0px
			background linear-gradient(right, rgba(_bg,0), rgba(_bg,1))
		&:after
			right 0px
			background linear-gradient(left, rgba(_bg,0), rgba(_bg,1))

	ul
		display block
		margin @line-height 0
		padding 0px
		li
			list-style square outside
			padding 0px
			margin 0px
			margin-left 1em

	.kb
		font-family Chosen, 'Helvetica Neue', Helvetica, Arial, sans-serif

	// Comparison table
	// ----------------

	c_yes = hsl(60,50%,50%)
	c_no = hsl(0,50%,50%)

	.comparison
		width 100%
		margin 10px auto 20px
		//border-collapse collapse

		col
			width 30%

		col.mid
			width 35%

		col.ref
			width 5%

		tr
			td
			th
				position relative
				padding 0.5em 2ex
				line-height 1em
				text-align left
				//transition opacity 200ms

				&:first-child
					text-align right
				//&:last-child
				//	text-align left
				&.mid
					text-align center

		tbody td
			border 1px solid rgba(black, 0.2)

		th
			background #ddd

		th.kb
			font-size 1.4em

		td.kb
			font-size 1.3em

		td.hidden
			border 0px none
			background none transparent

		td.yes
			background c_yes
			color white
		td.no
			background c_no
			color white

		td.own
			text-align center
			background c_yes
			color hsl(60,50%,10%)

		td.done
			font-family Helvetica, Arial, sans-serif
			background c_yes
			color hsl(60,50%,20%)
			text-shadow 0px -1px 0px hsl(60,50%,10%)
			font-size 2em
			padding 0px
			text-align center

		td.ref
			padding-left 0px
			padding-right 0px
			text-align center
			border 0px none
			line-height 0.5em

		&:hover
			tr td
				opacity 0.7
			tr:hover td
				opacity 1

		td.dependent:before
			content 'â–¼'
			display block
			position absolute
			top -0.5em
			left 50%
			font-size 20px
			line-height 1em
			width 3em
			margin -2px -1.5em
			color hsl(60,50%,20%)

		/*
		.col .content
			border 2px solid gray

		.first
			text-align left
			.content
				border-right 0px none
		.mid
			text-align center
			.content
				padding 20px 10px
				margin -20px 0px
		.last
			text-align right
			.content
				border-left 0px none
		*/
	
	.notes
		font-size 0px
		h2
			font-size 0px
			margin 0px
			padding 0px
			line-height 0px
			text-indent -9999px
			overflow hidden
		section
			width 30%
			display inline-block
			font-size 13px
			padding 0
			margin-right 1%
			vertical-align top
			*float left
			> *
				padding 1px 3%

	:target
		background rgba(black,0.1)

// Footer
// ------

footer
	font-size 12px
	border-top 2px solid gray
	margin-top 3em
	padding-top 1em
	padding-bottom 1em
	text-align center

	p:last-child
		font-size 0.8em
		margin-top 1ex

